<% @title = @game.name %>

<% @game.categories.each do |category| %>
  <div class="category">
    <div class="category_name">
      <div class="content">
        <%= category.name %>
      </div>
    </div>
    <% category.answers.each do |answer| %>
      <div class="reward">
        <div class="content">
          <%= render_reward(@game, category, answer) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div id="players">
  <% @game.players.each do |player| %>
    <div class="player">
      <div class="content">
        <span class="player_name"><%= player.name %></span>
        <hr>
        <%= render_score(player.score, score_path(@game, player)) %>
      </div>
    </div>
  <% end %>
</div>
