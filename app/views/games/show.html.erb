<% @game.categories.each do |category| %>
  <div class="category">
    <div class="category_name">
      <div class="content">
        <%= category.name %>
      </div>
    </div>
    <% category.answers.each do |answer| %>
      <div class="reward">
        <div class="content">
          <% reward = @game.reward_for(answer) %>
          <%= link_to number_with_delimiter(reward.score), answer_path(@game, category, reward) %>
          <%= image_tag "ruby.png" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
